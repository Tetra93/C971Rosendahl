                            <!--<Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>-->
                            <!--<Grid>-->
                            <Label Text="Start Date: "
                                   FontSize="18"
                                   VerticalOptions="Start"
                                   HorizontalOptions="Start"/>
                            <DatePicker Grid.Column="1"
                                x:Name="courseStartDate"
                               FontSize="18"
                               VerticalOptions="CenterAndExpand"
                               HorizontalOptions="Start"
                                        DateSelected="StartDate_Changed"/>
                            <!--</Grid>-->
                            <!--<Grid Grid.Row="1">-->
                            <Label Text="End Date: "
                                   Grid.Row="1"                                   
                                   FontSize="18"
                                   VerticalOptions="Start"
                                   HorizontalOptions="Start"/>
                            <DatePicker x:Name="courseEndDate"
                                        Grid.Row="1"
                                   Grid.Column="1"
                               FontSize="18"
                               VerticalOptions="CenterAndExpand" 
                               HorizontalOptions="Start"
                                        DateSelected="EndDate_Changed"/>
                            <!--</Grid>-->
                            <!--<Label Grid.Row="1"
                               Grid.Column="1"
                               Text="Notifications"
                               FontSize="18"
                               VerticalOptions="CenterAndExpand" 
                               HorizontalOptions="End">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="CourseDateNotifications_Clicked"/>
                            </Label.GestureRecognizers>
                        </Label>-->
                        </Grid>
                    </StackLayout>
                </Frame>
                <Frame Margin="0,10">
                    <StackLayout>
                        <Label Text="Course Description"
                               FontSize="18"
                               VerticalOptions="CenterAndExpand"
                               HorizontalOptions="CenterAndExpand"/>
                        <Editor x:Name="courseDescription" 
                           Placeholder="Course Description"
                            AutoSize="TextChanges"
                           FontSize="18"
                           VerticalOptions="FillAndExpand" 
                           HorizontalOptions="FillAndExpand"/>
                    </StackLayout>
                </Frame>
                <Frame Margin="0,10">
                    <StackLayout>
                        <Label Text="Course Instructor"
                               FontSize="18"
                               VerticalOptions="CenterAndExpand"
                               HorizontalOptions="CenterAndExpand"/>
                        <Picker x:Name="selectedInstructor"
                                FontSize="18"                                
                                VerticalOptions="FillAndExpand"
                                HorizontalOptions="FillAndExpand"
                                SelectedIndexChanged="SelectedInstructor_Changed"/>
                        <!--<Label x:Name="instructorName"
